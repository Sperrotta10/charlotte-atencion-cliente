generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
  output          = "../src/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// Creacion de tablas de prueba
model User {
  email String  @unique
  id    Int     @id @default(autoincrement())
  name  String?
  posts Post[]
}

model Post {
  authorId  Int?
  content   String?
  id        Int     @id @default(autoincrement())
  published Boolean @default(false)
  title     String
  author    User?   @relation(fields: [authorId], references: [id])
}


// --------------------------------------------------------
// TABLAS DEL MODULO-ATENCION-CLIENTE Y ENUMS
// --------------------------------------------------------

// Enums: Definen las reglas de negocio estrictas
enum TableStatus {
  AVAILABLE
  OCCUPIED
  OUT_OF_SERVICE
}

enum ClientStatus {
  ACTIVE
  BILL_REQUESTED
  CLOSED
}

enum OrderStatus {
  PENDING
  COOKING
  DELIVERED
  CANCELLED
}

enum ServiceType {
  CALL_WAITER
  COMPLAINT
}

enum RequestStatus {
  PENDING
  ATTENDED
  CANCELLED
}

// Acciones registradas desde Cocina para atribuir mesero
enum InteractionAction {
  ASSIGN
  SERVE
}

model Table {
  id            Int         @id @default(autoincrement())  
  tableNumber   Int         @unique @map("table_number")
  qrUuid        String      @unique @map("qr_uuid")
  capacity      Int
  currentStatus TableStatus @default(AVAILABLE) @map("current_status")
  isActive      Boolean  @default(true)

  // Relations
  clientes      ClienteTemporal[]

  // Table Config
  @@map("tables") // Nombre de la tabla en la DB
}

model ClienteTemporal {
  id           Int          @id @default(autoincrement())  
  tableId      Int          @map("table_id")
  table        Table        @relation(fields: [tableId], references: [id])  
  sessionToken String       @unique @map("session_token")
  customerName String       @map("customer_name")
  customerDni  String       @map("customer_dni") 
  status       ClientStatus @default(ACTIVE)
  totalAmount  Float        @default(0) @map("total_amount")  
  createdAt    DateTime     @default(now()) @map("created_at")
  closedAt     DateTime?    @map("closed_at")
  // Mesero que cerró la atención (KitchenStaff.id de charlotte-cocina)
  closedByWaiterId String?   @map("closed_by_waiter_id")
  // Último mesero que atendió (por CALL_WAITER u otras interacciones)
  lastWaiterId     String?   @map("last_waiter_id")

  // Relations
  comandas     Comanda[]
  requests     ServiceRequest[]
  ratings      WaiterRating[]
  interactions WaiterInteraction[]

  // Table Config
  @@map("cliente_temporal")
}

model Comanda {
  id          String         @id @default(uuid())  
  clienteId   Int         @map("cliente_id")
  cliente     ClienteTemporal @relation(fields: [clienteId], references: [id], onDelete: Cascade)
  status      OrderStatus @default(PENDING)
  notes       String?
  sentAt      DateTime    @default(now()) @map("sent_at")
  deliveredAt DateTime?   @map("delivered_at")

  // Relations
  items       OrderItem[]

  // Table Config
  @@map("comandas")
}

model OrderItem {
  id                  String     @id @default(uuid())
  comandaId           String     @map("comanda_id")
  comanda             Comanda @relation(fields: [comandaId], references: [id], onDelete: Cascade)
  productId           String     @map("product_id")
  quantity            Int
  unitPrice           Float   @map("unit_price")
  specialInstructions String? @map("special_instructions")

  // Table Config
  @@map("order_items")
}

model ServiceRequest {
  id         String           @id @default(uuid())
  clienteId  Int           @map("cliente_id")
  cliente    ClienteTemporal @relation(fields: [clienteId], references: [id], onDelete: Cascade)
  type       ServiceType
  message    String?
  status     RequestStatus @default(PENDING)
  createdAt  DateTime      @default(now()) @map("created_at")
  attendedAt DateTime?     @map("attended_at")
  attendedByWaiterId String? @map("attended_by_waiter_id") // UUID de KitchenStaff

  // Table Config
  @@map("service_requests")
}

// Registro de calificación por mesero para una sesión de cliente
model WaiterRating {
  id        String          @id @default(uuid())
  clienteId Int             @map("cliente_id")
  cliente   ClienteTemporal @relation(fields: [clienteId], references: [id], onDelete: Cascade)
  waiterId  String          @map("waiter_id") // UUID de KitchenStaff (charlotte-cocina)
  score     Int
  comment   String?
  createdAt DateTime        @default(now()) @map("created_at")

  @@map("waiter_ratings")
  @@unique([clienteId, waiterId])
}

// Registro de interacciones del mesero vinculadas a una sesión/comanda
model WaiterInteraction {
  id              String            @id @default(uuid())
  clienteId       Int               @map("cliente_id")
  cliente         ClienteTemporal   @relation(fields: [clienteId], references: [id], onDelete: Cascade)
  waiterId        String            @map("waiter_id")
  role            String?           // CHEF | WAITER | HEAD_WAITER | MAITRE, etc.
  action          InteractionAction
  externalOrderId String?           @map("external_order_id")
  createdAt       DateTime          @default(now()) @map("created_at")

  @@map("waiter_interactions")
}