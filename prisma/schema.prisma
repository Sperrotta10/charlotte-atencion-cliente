generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
  output          = "../src/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// Creacion de tablas de prueba
model User {
  email String  @unique
  id    Int     @id @default(autoincrement())
  name  String?
  posts Post[]
}

model Post {
  authorId  Int?
  content   String?
  id        Int     @id @default(autoincrement())
  published Boolean @default(false)
  title     String
  author    User?   @relation(fields: [authorId], references: [id])
}


// --------------------------------------------------------
// TABLAS DEL MODULO-ATENCION-CLIENTE Y ENUMS
// --------------------------------------------------------

// Enums: Definen las reglas de negocio estrictas
enum TableStatus {
  AVAILABLE
  OCCUPIED
  OUT_OF_SERVICE
}

enum ClientStatus {
  ACTIVE
  BILL_REQUESTED
  CLOSED
}

enum OrderStatus {
  PENDING
  COOKING
  DELIVERED
  CANCELLED
}

enum ServiceType {
  CALL_WAITER
  COMPLAINT
}

enum RequestStatus {
  PENDING
  ATTENDED
}

model Table {
  id            Int         @id @default(autoincrement())  
  tableNumber   Int         @unique @map("table_number")
  qrUuid        String      @unique @map("qr_uuid")
  capacity      Int
  currentStatus TableStatus @default(AVAILABLE) @map("current_status")

  // Relations
  clientes      ClienteTemporal[]

  // Table Config
  @@map("tables") // Nombre de la tabla en la DB
}

model ClienteTemporal {
  id           Int          @id @default(autoincrement())  
  tableId      Int          @map("table_id")
  table        Table        @relation(fields: [tableId], references: [id])  
  sessionToken String       @unique @map("session_token")
  customerName String       @map("customer_name")
  customerDni  String       @map("customer_dni") 
  status       ClientStatus @default(ACTIVE)
  totalAmount  Float        @default(0) @map("total_amount")  
  createdAt    DateTime     @default(now()) @map("created_at")
  closedAt     DateTime?    @map("closed_at")

  // Relations
  comandas     Comanda[]
  requests     ServiceRequest[]

  // Table Config
  @@map("cliente_temporal")
}

model Comanda {
  id          Int         @id @default(autoincrement())  
  clienteId   Int         @map("cliente_id")
  cliente     ClienteTemporal @relation(fields: [clienteId], references: [id], onDelete: Cascade)
  status      OrderStatus @default(PENDING)
  notes       String?
  sentAt      DateTime    @default(now()) @map("sent_at")
  deliveredAt DateTime?   @map("delivered_at")

  // Relations
  items       OrderItem[]

  // Table Config
  @@map("comandas")
}

model OrderItem {
  id                  Int     @id @default(autoincrement())
  comandaId           Int     @map("comanda_id")
  comanda             Comanda @relation(fields: [comandaId], references: [id], onDelete: Cascade)
  productId           Int     @map("product_id")
  quantity            Int
  unitPrice           Float   @map("unit_price")
  specialInstructions String? @map("special_instructions")

  // Table Config
  @@map("order_items")
}

model ServiceRequest {
  id         Int           @id @default(autoincrement())
  clienteId  Int           @map("cliente_id")
  cliente    ClienteTemporal @relation(fields: [clienteId], references: [id], onDelete: Cascade)
  type       ServiceType
  message    String?
  status     RequestStatus @default(PENDING)
  createdAt  DateTime      @default(now()) @map("created_at")
  attendedAt DateTime?     @map("attended_at")

  // Table Config
  @@map("service_requests")
}